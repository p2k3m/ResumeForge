// Example runtime configuration for local development.
// Copy this file to `config/runtime-config.json5` and fill in the values
// to run ResumeForge without exporting environment variables.
{
  // AWS region used by the SDK clients.
  AWS_REGION: 'us-east-1',
  // Name of the S3 bucket that stores uploads and generated artefacts.
  S3_BUCKET: 'resume-forge-local',
  // Deployment stage used for tagging infrastructure and generated artefacts.
  STAGE_NAME: 'dev',
  // Optional: override the environment label applied to records and S3 objects.
  DEPLOYMENT_ENVIRONMENT: 'dev',
  // Gemini API key used to generate enhanced content.
  GEMINI_API_KEY: 'replace-me',
  // Optional: override the orchestration EventBridge bus name when running locally.
  ORCHESTRATION_BUS_NAME: 'resume-forge-local-bus',
  // Optional: allow requests from these origins when running locally.
  CLOUDFRONT_ORIGINS: [
    'http://localhost:3000',
    'http://localhost:5173'
  ],
  // Optional: set to true to enable plaintext PDF fallback generation when
  // template rendering fails. Leave unset to return an error instead.
  ENABLE_PLAIN_PDF_FALLBACK: false,
  // Optional: set to true to remove session change logs when download sessions
  // expire. Enable when scaling storage aggressively; leave unset to retain
  // the logs for audits.
  ENABLE_DOWNLOAD_SESSION_LOG_CLEANUP: false,
  // Optional: set to true to delete superseded generated artifacts after a
  // successful session completes. Enable when scaling storage aggressively;
  // leave unset to retain prior versions for troubleshooting or audit trails.
  ENABLE_GENERATION_STALE_ARTIFACT_CLEANUP: false
}
